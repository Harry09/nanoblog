<UserControl x:Class="Nanoblog.Wpf.Pages.EntryListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nanoblog.Wpf.Pages"
      xmlns:entryList="clr-namespace:Nanoblog.Wpf.Controls.EntryList"
      mc:Ignorable="d">

    <Grid Background="#EEEEEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="0"
            Content="Add new post"
            Background="Transparent"
            BorderThickness="0"
            Command="{Binding AddPostCommand}"
            />

        <entryList:EntryListControl Grid.Row="2" DataContext="{Binding EntryListVM}" />
    </Grid>
</UserControl>
