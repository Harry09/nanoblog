<UserControl x:Class="Nanoblog.Wpf.Pages.EntryDetailPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoblog.Wpf.Pages"
             xmlns:entryList="clr-namespace:Nanoblog.Wpf.Controls.EntryList"
             xmlns:commentList="clr-namespace:Nanoblog.Wpf.Controls.CommentList"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#EEEEEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="32" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        
        <entryList:EntryListItemControl Grid.Row="0" DataContext="{Binding Entry}" />
        <commentList:CommentListControl Grid.Row="2" DataContext="{Binding Comments}" />

        <Button Grid.Row="4" Content="Back" Background="Transparent" BorderThickness="0" Height="28" Command="{Binding BackCommand}" />
    </Grid>
</UserControl>
