<local:AppBar x:Class="Nanoblog.Wpf.Controls.AppBar.UserAppBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nanoblog.Wpf.Controls.AppBar"
             mc:Ignorable="d" 
             d:DesignHeight="40.312" d:DesignWidth="558.125">
    
    <TextBlock Grid.Column="3" Margin="0 6 0 0" Text="{Binding NavBarMessage}" />
    <Button Grid.Column="4" Margin="4" Content="Log Out" Padding="4 0 4 0" Command="{Binding LogOutCommand}" />
    
</local:AppBar>
